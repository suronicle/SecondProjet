<script th:inline="javascript">
    $("#backbtn").click(function () {
        let pn = [[${session.pageNum}]];
        if(pn != null){
            location.href = `/?pageNum=${pn}`;
        } else {
            location.href = "/?pageNum=1";
        }
    })
</script>
